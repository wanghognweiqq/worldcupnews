<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_2"
    tools:context="com.example.administrator.shijeibei.Activity.RegisterActivity">

    <LinearLayout
        android:id="@+id/regist_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_regist_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="邮箱"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:theme="@style/MyEditText"/>

        <EditText
            android:id="@+id/et_regist_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="用户名"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:theme="@style/MyEditText"/>

        <EditText
            android:id="@+id/et_regist_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="姓名"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:theme="@style/MyEditText"/>

        <EditText
            android:id="@+id/et_regist_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="密码"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:theme="@style/MyEditText"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="注册"
            android:textColor="@color/white"
            android:background="@drawable/button"/>

    </LinearLayout>

</RelativeLayout>